{
    "configurations": [
        {
            "name": "CUDA C++: Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/debug/appSkel",
            "args": ["${workspaceFolder}/art1.pgm"]    
        },
    {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/debug/appSkel",
        "args": ["${workspaceFolder}/art1.pgm"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/debug/",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }
    ]
}